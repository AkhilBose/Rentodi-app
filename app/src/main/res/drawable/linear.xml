<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item >
        <shape
                android:shape="rectangle">
            <gradient
                    android:startColor="#EBEBEC"
                    android:endColor="#EBEBEC"
                    android:type="linear"
                    android:angle="180"> <!-- Change this value to have the correct shadow angle, must be multiple from 45 -->
            </gradient>
            <corners android:radius="9dp"/>
        </shape>
    </item>
    <item android:right="1dp"  android:bottom="2dp" >
        <shape
                android:shape="rectangle">
            <solid android:color="@android:color/white"/>
            <stroke android:width="1dp" android:color="#EBEBEC" />
            <corners android:radius="9dp"/>
        </shape>
    </item>
</layer-list>